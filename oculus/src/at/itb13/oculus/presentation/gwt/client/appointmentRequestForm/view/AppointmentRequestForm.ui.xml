<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:dp="urn:import:com.google.gwt.user.datepicker.client" 
	xmlns:t="urn:import:com.tractionsoftware.gwt.user.client.ui">

	<g:HTMLPanel>
	
		<div id="wrapper">
			<g:VerticalPanel>
				<g:Label ui:field="nameLabel" text="Patient Name" />
				<g:Label ui:field="sinLabel" text="Social Insurance Number" />
				<g:Label ui:field="doctorLabel" text="Patients Doctor" />
				<g:Label text="Your next Appointment" />
				<g:HTMLPanel>
					<table ui:field="appointmentTable">
						<col ui:field="dateColumn">25.01.2016</col>
						<col ui:field="doctorColumn">Dr. Tavolato</col>
					</table>
				</g:HTMLPanel>
				<g:Button ui:field="logOutButton" text="Log out" />
			</g:VerticalPanel>
		</div>
		<div id="wrapper">
			<g:HorizontalPanel>
				<g:HTMLPanel>
					<table ui:field="fromToTable">

						<!-- First option -->

						<g:ListBox ui:field="weekdayListBox1">
							<g:item value='1'>
								Monday
							</g:item>
							<g:item value='2'>
								Tuesday
							</g:item>
							<g:item value='3'>
								Wednesday
							</g:item>
							<g:item value='4'>
								Thursday
							</g:item>
							<g:item value='5'>
								Friday
							</g:item>
						</g:ListBox>

						<g:Label ui:field="weekdayErrorLabel1" />
						<g:Label ui:field="fromLabel1" text="From" />
						<g:Label ui:field="fromErrorLabel1" />
						<t:UTCTimeBox ui:field="fromTimeBox1" />
						<g:Label ui:field="toLabel1" text="To" />
						<g:Label ui:field="toErrorLabel1" />
						<t:UTCTimeBox ui:field="toTimeBox1" />
						<g:Button ui:field="addButton1" text="Add" />


						<!-- Second option -->

						<g:ListBox ui:field="weekdayListBox2">
							<g:item value='1'>
								Monday
							</g:item>
							<g:item value='2'>
								Tuesday
							</g:item>
							<g:item value='3'>
								Wednesday
							</g:item>
							<g:item value='4'>
								Thursday
							</g:item>
							<g:item value='5'>
								Friday
							</g:item>
						</g:ListBox>
						<g:Label ui:field="weekdayErrorLabel2" />
						<g:Label ui:field="fromLabel2" text="From" />
						<g:Label ui:field="fromErrorLabel2" />
						<t:UTCTimeBox ui:field="fromTimeBox2" />
						<g:Label ui:field="toLabel2" text="To" />
						<g:Label ui:field="toErrorLabel2" />
						<t:UTCTimeBox ui:field="toTimeBox2" />

						<g:Button ui:field="addButton2" text="Add" />
						<g:Button ui:field="removeButton1" text="Remove" />
						
						<!-- Third option -->

						<g:ListBox ui:field="weekdayListBox3">
							<g:item value='1'>
								Monday
							</g:item>
							<g:item value='2'>
								Tuesday
							</g:item>
							<g:item value='3'>
								Wednesday
							</g:item>
							<g:item value='4'>
								Thursday
							</g:item>
							<g:item value='5'>
								Friday
							</g:item>
						</g:ListBox>
						<g:Label ui:field="weekdayErrorLabel3" />
						<g:Label ui:field="fromLabel3" text="From" />
						<g:Label ui:field="fromErrorLabel3" />
						<t:UTCTimeBox ui:field="fromTimeBox3" />
						<g:Label ui:field="toLabel3" text="To" />
						<g:Label ui:field="toErrorLabel3" />
						<t:UTCTimeBox ui:field="toTimeBox3" />
						<g:Button ui:field="removeButton2" text="Remove" />
						
					</table>

				</g:HTMLPanel>
				<g:HTMLPanel>
					<table ui:field="datepickerTable">
						<dp:DatePicker ui:field="datepicker1" />
						<g:Label ui:field="datepicker1ErrorLabel" />
						<g:Label ui:field="fromDateLabel" />
						<g:Label ui:field="toDateLabel" />
						<!-- <dp:DatePicker ui:field="datepicker2" />
						<g:Label ui:field="datepicker2ErrorLabel" /> -->
						<g:Label ui:field="reasonForAppointmentLabel" text="Free text" />
						<g:TextBox ui:field="reasonForAppointmentTextBox" />
						<g:ListBox ui:field="eventTypeListBox"/>
					</table>
					<g:Button ui:field="submitButton" text="Submit" />
					<g:Button ui:field="resetButton" text="Reset" />
				</g:HTMLPanel>

			</g:HorizontalPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 